   "source": [
    "n = 1\n",
    "m = 0\n",
    "maxCount = 0\n",
    "while n < 1000000: \n",
    "    x = n\n",
    "    count = 1\n",
    "    while x != 1:\n",
    "        if x % 2 == 0:\n",
    "            x = x / 2\n",
    "        else:\n",
    "            x = (3*x) + 1\n",
    "        count += 1\n",
    "\n",
    "    if count > maxCount:\n",
    "        maxCount = count\n",
    "        m = n\n",
    "    n += 1\n",
    "\n",
    "print(m)"
   ]
